<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Shooting Game</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    body {
      background: #000;
      overflow: hidden;
      font-family: Arial, sans-serif;
      color: #fff;
    }
    #game {
      position: relative;
      width: 100vw;
      height: 100vh;
      background: radial-gradient(circle, #111, #000);
      overflow: hidden;
    }
    #player {
      position: absolute;
      bottom: 20px;
      left: 50%;
      transform: translateX(-50%);
      width: 50px;
      height: 50px;
      background: url("https://cdn-icons-png.flaticon.com/512/616/616408.png") no-repeat center/contain;
    }
    .bullet {
      position: absolute;
      width: 8px;
      height: 20px;
      background: yellow;
      border-radius: 4px;
    }
    .enemy {
      position: absolute;
      top: -50px;
      width: 40px;
      height: 40px;
      background: url("https://cdn-icons-png.flaticon.com/512/1539/1539677.png") no-repeat center/contain;
    }
    #score {
      position: absolute;
      top: 10px;
      left: 10px;
      font-size: 20px;
      font-weight: bold;
    }
    #gameOver {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      font-size: 40px;
      font-weight: bold;
      display: none;
      color: red;
      text-align: center;
    }
  </style>
</head>
<body>
  <div id="game">
    <div id="player"></div>
    <div id="score">Score: 0</div>
    <div id="gameOver">Game Over <br><small>Press F5 to Restart</small></div>
  </div>

  <script>
    const game = document.getElementById("game");
    const player = document.getElementById("player");
    const scoreDisplay = document.getElementById("score");
    const gameOverText = document.getElementById("gameOver");
    let score = 0;
    let gameOver = false;

    // Player movement
    let playerX = window.innerWidth / 2 - 25;
    const speed = 20;

    document.addEventListener("keydown", (e) => {
      if (gameOver) return;
      if (e.key === "ArrowLeft" && playerX > 0) {
        playerX -= speed;
      }
      if (e.key === "ArrowRight" && playerX < window.innerWidth - 50) {
        playerX += speed;
      }
      if (e.key === " ") {
        shoot();
      }
      player.style.left = playerX + "px";
    });

    // Shooting
    function shoot() {
      const bullet = document.createElement("div");
      bullet.classList.add("bullet");
      bullet.style.left = playerX + 21 + "px";
      bullet.style.bottom = "70px";
      game.appendChild(bullet);

      const interval = setInterval(() => {
        let bulletBottom = parseInt(bullet.style.bottom);
        if (bulletBottom > window.innerHeight) {
          bullet.remove();
          clearInterval(interval);
        } else {
          bullet.style.bottom = bulletBottom + 10 + "px";
          checkCollision(bullet, interval);
        }
      }, 20);
    }

    // Enemies
    function spawnEnemy() {
      if (gameOver) return;
      const enemy = document.createElement("div");
      enemy.classList.add("enemy");
      enemy.style.left = Math.random() * (window.innerWidth - 40) + "px";
      game.appendChild(enemy);

      const interval = setInterval(() => {
        let enemyTop = parseInt(enemy.style.top);
        if (enemyTop > window.innerHeight - 60) {
          endGame();
          enemy.remove();
          clearInterval(interval);
        } else {
          enemy.style.top = enemyTop + 5 + "px";
        }
      }, 50);

      setTimeout(spawnEnemy, 2000);
    }
    spawnEnemy();

    // Collision Detection
    function checkCollision(bullet, bulletInterval) {
      const enemies = document.querySelectorAll(".enemy");
      enemies.forEach((enemy) => {
        const bulletRect = bullet.getBoundingClientRect();
        const enemyRect = enemy.getBoundingClientRect();

        if (
          bulletRect.left < enemyRect.right &&
          bulletRect.right > enemyRect.left &&
          bulletRect.top < enemyRect.bottom &&
          bulletRect.bottom > enemyRect.top
        ) {
          score += 10;
          scoreDisplay.textContent = "Score: " + score;
          enemy.remove();
          bullet.remove();
          clearInterval(bulletInterval);
        }
      });
    }

    // End Game
    function endGame() {
      gameOver = true;
      gameOverText.style.display = "block";
    }
  </script>
</body>
</html>
